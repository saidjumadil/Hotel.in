    <!-- latest jquery-->
    <script>
      const tambahan = document.querySelector('#tambahan')
      const tambah = document.querySelector('#tambah')
      deleteItem()
      cekInterior()

      tambah.addEventListener('click', res => {
        tambahan.innerHTML += `
        <div id="item" class="row mb-3">
          <div class="col col-sm-3 d-flex align-items-center">
            <label for="input-text-1">Nama Interior Tambahan</label>
          </div>
          <div class="col col-sm-6">
            <input class="form-control btn-square" id="input-text-1" name="interior" type="text" multiple data-bs-original-title="" title="" >
          </div>
          <div class="col col-sm-3">
            <button class="btn btn-danger" id="hapus" type="button">Hapus</button>
          </div>
        </div>
        `
        deleteItem()
      })

      function deleteItem(){
        const item = document.querySelectorAll('#item')
        const hapus = document.querySelectorAll('#hapus')

        for(let list in item){
          hapus[list].addEventListener('click', res => {
            item[list].remove()
            cekInterior()
          })
        }
      }
      
      function cekInterior(){
        const item = document.querySelectorAll('#item')
        if(item.length == 0){
          tambahan.innerHTML = `<input type="hidden" name="interior" id="interior" value=''>`
        }
      }
    </script>
